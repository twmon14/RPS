    (result: 1)
    (rnw: (1 RN)) (choices: (r p s))} .

    rl [sp] :
    {(newpair: NP) (nw: (n(s,r) n(p,p) n(p,r) n(r,s) n(r,p) n(r,r) NW))
    (result: U)
    (rnw: RN) (choices: (r p s))}
